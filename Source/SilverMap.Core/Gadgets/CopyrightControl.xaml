<UserControl x:Class="Ptvag.Dawn.Controls.SilverMap.Core.Gadgets.CopyrightControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Border CornerRadius="8" BorderThickness="0" BorderBrush="Transparent">
            <StackPanel x:Name="TextStack" Margin="2,2,2,2">
            </StackPanel>
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0.5" />
                    <GradientStop Color="#40FFFFFF" Offset="1" />
                    <GradientStop Color="#40FFFFFF" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
    </Grid>
</UserControl>
